<div class="edit-box">
  <h1>Editing Book</h1>

  <% if @book.errors.any? %>
    <div class="edit-error-box">
      <div class="edit-error-title">
        <%= @book.errors.count %>error prohibited this book from being saved:
      </div>
      <ul class="edit-error-comment">
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @book do |f| %>

    <div class="edit-title-box">
      <p>Title</p>
      <%= f.text_field :title %>
    </div>

    <div class="edit-body-box">
      <p>Body</p>
      <%= f.text_area :body %>
    </div>

    <%= f.submit 'Update Book', class:"edit-botan" %>

  <% end %>

  <div class="edit-link-box">
    <%= link_to 'Show', book_path(@book.id), class:"link" %>
    <p class="edit-link-border">|</p>
    <%= link_to 'Back', books_path, class:"link" %>
  </div>
</div>

