<div class="edit-box">
  <h1>Editing Book</h1>

  <% if @book.errors.any? %>
    <%= @book.errors.count %>error prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @book do |f| %>

    <div class="edit-title-box">
      <p>Title</p>
      <%= f.text_field :title %>
    </div>

    <div class="edit-body-box">
      <p>Body</p>
      <%= f.text_area :body %>
    </div>

    <%= f.submit 'Update Book' %>

  <% end %>

  <%= link_to 'Show', book_path(@book.id) %>
  <p class="edit-link-border">|</p>
  <%= link_to 'Back', books_path %>
</div>

